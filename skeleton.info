; Regions

; This section lists the regions defined in Skeleton page.tpl.php and
; maintenance-page.tpl.php files.
;
; In the page.tpl, the contents of the region are output with a
; $page['MACHINE-NAME'] variable and, in the maintenance-page.tpl, the region is
; output with a $MACHINE-NAME variable. For example, with this line in the .info
; file:
;   regions[header_top] = Header top
; You'll use this variable in page.tpl.php:
;   <?php print render($page['header_top']); ?>
; And you'll use this variable in maintenance-page.tpl.php:
;   <?php print $header_top; ?>

regions[header_left]         = Header left
regions[header_right]        = Header right
regions[highlighted]         = Highlighted
regions[help]                = Help

regions[top_content_left]    = Top content left
regions[top_content_right]   = Top content right


regions[content]             = Content
regions[sidebar_first]       = First sidebar
regions[sidebar_second]      = Second sidebar
regions[content_wide1]       = Content wide 1
regions[content_wide2]       = Content wide 2
regions[content_wide3]       = Content wide 3
regions[content_wide4]       = Content wide 4

regions[footer_firstcolumn]  = Footer first column
regions[footer_secondcolumn] = Footer second column
regions[footer_thirdcolumn]  = Footer third column
regions[footer_fourthcolumn] = Footer fourth column
regions[footer_left]         = Footer left
regions[footer_right]        = Footer right


; The page_top and page_bottom regions are hidden, which means they will not
; show up on the blocks administration page. But they are required in order for
; the html.tpl.php to work properly, so do not delete them.

regions[page_top]       = Page top
regions[page_bottom]    = Page bottom



